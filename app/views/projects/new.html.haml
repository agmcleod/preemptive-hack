- content_for :breadcrumb do
  %nav
    %ul
      %li= link_to @hackday.hackday_organization_name, hackday_organization_path(@hackday.hackday_organization)
      %li= link_to @hackday.name, hackday_path(@hackday)

%h1 New Project

= form_for [@hackday, @project] do |f|
  - if @projects.any?
    %fieldset
      = select_tag 'existing_project_id', options_from_collection_for_select(@projects, 'id', 'name'), prompt: 'Select existing project'
  = render 'form', project: @project, hardwares: @hardwares, f: f
