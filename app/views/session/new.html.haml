%h1 Login

= form_tag authenticate_path do
  %fieldset
    .field
      = label_tag :email, "Email Address"
      = text_field_tag :email
    .field
      = label_tag :password
      = password_field_tag :password
    .field
      = submit_tag 'Login', class: "btn"

%p
  %strong New User?
  = link_to 'Register here', new_user_path