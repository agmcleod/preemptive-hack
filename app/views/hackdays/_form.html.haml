= form_for [hackday_organization, hackday] do |f|
  - if hackday.errors.any?
    #error_explanation
      %h2= "#{pluralize(hackday.errors.count, "error")} prohibited this hackday from being saved:"
      %ul
        - hackday.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :start_date, 'Start Date'
    = f.text_field :start_date, type: 'datetime'
  .field
    = f.label :end_date, 'End Date'
    = f.text_field :end_date, type: 'datetime'
  .field
    = f.submit 'Save', class: 'btn btn-primary'
